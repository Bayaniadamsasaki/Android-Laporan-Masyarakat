<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">


    <RelativeLayout
        android:id="@+id/list_item"
        android:layout_width="335dp"
        android:layout_height="740dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="114dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/headbox_kebakaran"
            android:layout_width="335dp"
            android:layout_height="51dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/headbox_kebakaran"
            />
        <TextView
            android:id="@+id/laporan_kebakaran"
            android:layout_width="193dp"
            android:layout_height="27dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_semibold"
            android:text="Laporan Kebakaran"
            android:gravity="top"
            />

        <View
            android:id="@+id/headbox_white"
            android:layout_width="335dp"
            android:layout_height="153dp"
            android:layout_below="@+id/headbox_kebakaran"
            android:background="@drawable/rounded_box" />

        <TextView
            android:id="@+id/txtKebakaran"
            android:layout_width="130dp"
            android:layout_height="20dp"
            android:layout_below="@+id/headbox_kebakaran"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="top"
            android:text="Laporan Kebakaran"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tanggal"
            android:layout_width="121dp"
            android:layout_height="20dp"
            android:layout_below="@+id/txtKebakaran"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="top"
            android:text="Tanggal"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/alamat"
            android:layout_width="313dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tanggal"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="top"
            android:text="Alamat"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/diterima"
            android:layout_width="115dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/headbox_white"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="209dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="11dp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="top"
            android:text="Laporan Diterima"
            android:textColor="#22C55E"
            android:textSize="13sp" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
